{
  "info": {
    "name": "Markver - Order Execution Engine",
    "description": "API collection for testing the Markver order execution engine",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "orderId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/health",
          "host": ["{{baseUrl}}"],
          "path": ["api", "health"]
        },
        "description": "Check if the server is running"
      }
    },
    {
      "name": "Create Market Order - SOL to USDC",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Note: This endpoint uses WebSocket, so you'll need a WebSocket client to see full updates",
              "// The orderId will be sent via WebSocket connection",
              ""
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"orderType\": \"market\",\n  \"tokenIn\": \"SOL\",\n  \"tokenOut\": \"USDC\",\n  \"amountIn\": 10,\n  \"userId\": \"user123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/orders/execute",
          "host": ["{{baseUrl}}"],
          "path": ["api", "orders", "execute"]
        },
        "description": "Create a market order to swap 10 SOL for USDC. Connection will upgrade to WebSocket for real-time status updates."
      }
    },
    {
      "name": "Create Market Order - Large Amount",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"orderType\": \"market\",\n  \"tokenIn\": \"SOL\",\n  \"tokenOut\": \"USDC\",\n  \"amountIn\": 100\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/orders/execute",
          "host": ["{{baseUrl}}"],
          "path": ["api", "orders", "execute"]
        },
        "description": "Create a market order with larger amount"
      }
    },
    {
      "name": "Create Market Order - ETH to USDC",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"orderType\": \"market\",\n  \"tokenIn\": \"ETH\",\n  \"tokenOut\": \"USDC\",\n  \"amountIn\": 5\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/orders/execute",
          "host": ["{{baseUrl}}"],
          "path": ["api", "orders", "execute"]
        },
        "description": "Create a market order for ETH/USDC pair"
      }
    },
    {
      "name": "Get Order by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/orders/{{orderId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "orders", "{{orderId}}"]
        },
        "description": "Fetch a specific order by ID. Replace {{orderId}} with actual order ID."
      }
    },
    {
      "name": "Get All Orders",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/orders?limit=10&offset=0",
          "host": ["{{baseUrl}}"],
          "path": ["api", "orders"],
          "query": [
            {
              "key": "limit",
              "value": "10"
            },
            {
              "key": "offset",
              "value": "0"
            }
          ]
        },
        "description": "Get all orders with pagination"
      }
    },
    {
      "name": "Get Confirmed Orders",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/orders?status=confirmed&limit=20",
          "host": ["{{baseUrl}}"],
          "path": ["api", "orders"],
          "query": [
            {
              "key": "status",
              "value": "confirmed"
            },
            {
              "key": "limit",
              "value": "20"
            }
          ]
        },
        "description": "Get only confirmed orders"
      }
    },
    {
      "name": "Get Failed Orders",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/orders?status=failed",
          "host": ["{{baseUrl}}"],
          "path": ["api", "orders"],
          "query": [
            {
              "key": "status",
              "value": "failed"
            }
          ]
        },
        "description": "Get only failed orders"
      }
    },
    {
      "name": "Invalid Order - Missing Fields",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"orderType\": \"market\",\n  \"tokenIn\": \"SOL\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/orders/execute",
          "host": ["{{baseUrl}}"],
          "path": ["api", "orders", "execute"]
        },
        "description": "Test validation - should fail with missing required fields"
      }
    },
    {
      "name": "Invalid Order - Negative Amount",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"orderType\": \"market\",\n  \"tokenIn\": \"SOL\",\n  \"tokenOut\": \"USDC\",\n  \"amountIn\": -10\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/orders/execute",
          "host": ["{{baseUrl}}"],
          "path": ["api", "orders", "execute"]
        },
        "description": "Test validation - should fail with negative amount"
      }
    },
    {
      "name": "Invalid Order - Unsupported Type",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"orderType\": \"limit\",\n  \"tokenIn\": \"SOL\",\n  \"tokenOut\": \"USDC\",\n  \"amountIn\": 10\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/orders/execute",
          "host": ["{{baseUrl}}"],
          "path": ["api", "orders", "execute"]
        },
        "description": "Test order type validation - LIMIT orders not yet supported (should fail gracefully)"
      }
    }
  ]
}
